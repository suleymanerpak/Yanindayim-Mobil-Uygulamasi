<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lineerId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bilgial">

    <TextView
        android:id="@+id/AdId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="AD:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextAdId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Adınızı Giriniz..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/SoyadId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="SOYAD:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextSoyadId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Soyadınızı Giriniz..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/editTextDogumTarihiId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="DOĞUM TARİHİ:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/TarihId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarih Seç"
            android:textSize="20sp"
            app:backgroundTint="#191919" />

        <TextView
            android:id="@+id/TarihGosterId"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/KaydetId"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="KAYDET"
        android:textSize="20sp"
        app:backgroundTint="#000000" />

    <TextView
        android:id="@+id/yazdırId"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="20sp" />
</LinearLayout>