<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ayakhavadayarim">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifAyakHavadaYarimId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ayakhavadayarimmekik"/>

    <TextView
        android:id="@+id/textAyakHavadaYarimBaslikId"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="AYAK HAVADA YARIM MEKİK"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textAyakHavadaYarimAciklamaId"
        android:layout_width="328dp"
        android:layout_height="118dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Sırt üstü yatın.Dizlerini kırın ve birleştirerek havada tutun.Kollarını kafanın arkasında birleştirin.Dirseklerinizi havada kapatmaya çalışın ve yarım mekik çekin.Ayaklarınız havada sabit kalsın.8 tekrar yapın."
        android:textColor="#000000"
        android:textSize="16sp" />
</LinearLayout>